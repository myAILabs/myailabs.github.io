{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Markdown Frontmatter",
  "type": "object",
  "properties": {
    "title": { "type": "string" },
    "date": { "type": "string", "format": "date-time" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "draft": { "type": "boolean" },
    "description": { "type": "string" },
    "author": { "type": "string" },
    "featured": { "type": "boolean" },
    "slug": { "type": "string" }
  },
  "required": ["title", "date"],
  "additionalProperties": true
}
